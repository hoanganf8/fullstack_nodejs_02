<h1>Chọn vai trò</h1>
<form action="" method="post">
  <% roles.forEach(role => { const isChecked = user.roles.find(item => item.id
  === role.id) %>
  <label class="d-block mb-2">
    <input type="checkbox" name="roles" value="<%= role.id %>" <%= isChecked ?
    'checked': '' %>/> <%= role.name %>
  </label>
  <% }) %>

  <button class="btn btn-primary">Lưu</button>
  <a href="/users" class="btn btn-danger">Hủy</a>
</form>
