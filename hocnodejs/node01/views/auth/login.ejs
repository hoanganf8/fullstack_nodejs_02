<h1>Đăng nhập</h1>
<form action="" method="post">
  <div>
    <label>Email</label>
    <div>
      <input type="text" name="email" placeholder="Email..." />
    </div>
    <%= getError(errors, 'email') %>
  </div>
  <div>
    <label>Password</label>
    <div>
      <input type="password" name="password" placeholder="Password..." />
    </div>
    <%= getError(errors, 'password') %>
  </div>
  <button>Login</button>
</form>
